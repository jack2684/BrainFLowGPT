generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id         String    @id @default(uuid())
  userId     String    @unique // maps to auth.users.id
  username   String    @unique
  fullName   String?
  avatarUrl  String?
  website    String?
  updatedAt  DateTime  @updatedAt
  createdAt  DateTime  @default(now())

  @@map("profiles")
}

